standardSignals =
  start: ['load', 'link', 'run']
  stop: ['halt', 'unlink', 'unload']

task =
  type: 'protocol.task'
  signals: standardSignals

agent =
  type: 'protocol.agent'
  signals: standardSignals

module.exports =
  protocol:

    client:
      build: task
      test: task
      run: agent
      deploy: task

    server:
      run: agent
      test: task
